{
  "$schema": "https://turbo.build/schema.json",

  "pipeline": {
    "build": {
      "env": ["VERCEL_URL", "RENDER_INTERNAL_HOSTNAME", "NEXT_PUBLIC_PORT"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": {
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test:e2e": {}
  }
}
